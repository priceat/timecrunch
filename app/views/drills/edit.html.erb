<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Edit Drill</h1>
  <%= simple_form_for current_drill, url: drill_path(current_drill), html: { method: :put } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :pointers %>
  <%= f.input :video %>
  <%= f.input :drill_pattern %>
  <%= f.input :reps, :collection => Drill::REPS, :label => 'Drill Reps', :include_blank => false %>
  <%= f.input :skill_level, :collection => Drill::LEVELS, :label => 'Skill Level', :include_blank => false %>
  <br />
  <%= f.submit "Update", :class => 'btn btn-primary' %>
  <%= link_to 'Back', :back, class: 'btn btn-success' %> 
  <br />
<% end %>
<br />
</div>