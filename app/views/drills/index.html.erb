  <div class="booyah-box col-xs-10 col-xs-offset-1">
  <% @drills.each do |drill| %>
  <h1 class="text-center"> 
    <%= drill.name %></h1>
  <hr />
    <h2 class="text-center">
      <%= drill.description %></h2>
    <br />
    <div class="col-sm-4 col-xs-12 text-center">
      <%= link_to 'Drill Details', drill_path(drill), :class => 'btn btn-primary btn-large' %>
    </div>
    <br class="clr" />
  <% end %>
    <%= will_paginate @drills %>
</div>