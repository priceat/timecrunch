<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Create a New Drill</h1>
  <%= simple_form_for @drill do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :pointers %>
  <%= f.input :video %>
  <%= f.input :skill_level, :collection => Drill::LEVELS, :label => 'Skill Level' %>
  <br />
  <%= f.submit "Create", :class => 'btn btn-primary' %>
  <br />
<% end %>
<br />
</div>