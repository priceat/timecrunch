<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
<h2> Workout for <%= current_user.email %></h2>
 <table class="table table-striped">
  <thead>
    <tr>
      <th>Drill Name</th>
      <th>Description</th>
      <th>Pointers</th>
      <th>Video</th>
      <th colspan="<%= @colspan %>"></th>
    </tr>
  </thead>
  <tbody>
  <% @drills.each do |drill| %>
    <tr>
      <td><%= link_to drill.name, drill %></td>
      <td><%= drill.description %></td>
      <td><%= drill.pointers %></td>
      <% if drill.video.present? %>
      <td><%= link_to "Video", drill, class: 'btn-xs btn-success' %></td>
      <% else %>
      <td>Not Yet</td>
      <% end %>
    </tr>
    <% end %>
  </table>
  <%= link_to 'Begin Workout', workout_exercise_drill_path, class: 'btn btn-success' %>
</div>